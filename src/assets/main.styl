// $color-pack = false
@import './_fonts';
@import '~vuetify/src/stylus/main'
@import './_loading';

li {
  list-style-position: inside
}

.navigation {
  margin-bottom: 13px;
}

.navigation div.toolbar__content {
  margin-bottom: 12px;
}

.hide-navigation .toolbar__extension {
  display: none
}

.hide-navigation div.toolbar__content{
  margin-bottom: 0
}

.search__wrap {
  flex: 1
}

.search-icon--mobile {
  display: none
}

.bus-table tbody {
  display: block;
  max-height: 50vh;
  overflow-y: scroll;
}

.bus-table thead, tbody tr {
  display: table;
  width: 100%;
  table-layout: fixed;
}

.bus-table thead th{
  width: 100%;
}

.scroll-here {
  border-top: 1px solid @success;
}

.tabs__bar .tabs__wrapper {
  overflow: hidden;
}

a {
  color: $primary
  text-decoration: none
}

.fade-enter-active, .fade-leave-active {
  transition: .4s all ease-out;
  transform-origin: 50% 100%;
  transform: translate3d(0, 0, 0);
}

.fade-enter, .fade-leave-to {
  opacity: 0;
  transform: translateY(60px);
}

.progress-linear__bar__determinate.primary {
	animation: bg-pan-right 6s linear infinite alternate both;
	background: linear-gradient(270deg, #cc6aa5, #3e91cc, #2dcca7);
  background-size: 600% 100%;
}

@keyframes bg-pan-right {
  0% {
    background-position: 0% 50%;
  }
  100% {
    background-position: 100% 50%;
  }
}

@media only screen and (max-width: 768px) {
  .navigation {
    margin-bottom: 19px;
  }

  .navigation div.toolbar__content {
    margin-bottom: 16px;
  }

  .hide-navigation div.toolbar__content{
    margin-bottom: 0
  }

  .search-expand {
    position: absolute;
    z-index: 999;
    top: 0;
    left: 0;
    margin-top: 3px;
    width: 100%;
    transition: .4s all;
  }

  .search-expand .input-group--solo {
    margin-left: 0px !important;
    margin-right: 0px !important;
  }

  .hide-search--mobile {
    display: none
  }

  .search-icon--mobile {
    display: block;
  }
}
