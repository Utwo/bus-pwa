// $color-pack = false
@import '../../node_modules/vuetify/src/stylus/app';
@import './_loading';

.navigation div.toolbar__content {
  margin-bottom: 10px;
}

.hide-navigation .toolbar__extension {
  display: none
}

.bus-table {
  height: 65vh;
  overflow-y: scroll;
}

.tabs__bar .tabs__wrapper {
  overflow: hidden;
}

a {
  color: $primary
  text-decoration: none
}

.fade-enter-active, .fade-leave-active {
  transition: .4s all ease-out;
  transform-origin: 50% 100%;
}

.fade-enter, .fade-leave-to {
  opacity: 0;
  transform: scale(.8) translateY(40px);
}

.progress-linear__bar__determinate.primary {
	animation: bg-pan-right 6s linear infinite alternate both;
	background-image: linear-gradient(270deg,#cc6aa5,#3e91cc,#2dcca7);
  background-size: 600% 100%;
}

@keyframes bg-pan-right {
  0% {
    background-position: 0% 50%;
  }
  100% {
    background-position: 100% 50%;
  }
}

@media only screen and (max-width: 768px) {
  .navigation .toolbar__content .spacer {
    display: none
  }
}

@media only screen and (max-width: 320px) {
  .navigation .toolbar__title {
    margin-left: 0;
  }
  .navigation .input-group--solo {
    margin-left: 10px !important;
    margin-right: 0px !important;
  }
}
