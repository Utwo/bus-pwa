// $color-pack = false
@import './_fonts';
@import '~vuetify/src/stylus/app.styl'
@import './_loading';

li {
  list-style-position: inside
}

a {
  color: $primary
  text-decoration: none
}

.navigation {
  margin-bottom: 13px;
}

.v-toolbar__content .v-input__slot {
  margin: 0;
}

.v-toolbar__extension {
  margin-top: 12px;
  padding: 0;
}

.navigation .v-text-field.v-text-field--solo:not(.v-text-field--solo-flat) > .v-input__control > .v-input__slot {
  background: none;
  box-shadow: none;
}

.search__wrap {
  flex: 1
}

.search-icon--mobile {
  display: none
}

.bus-table tbody {
  display: block;
  max-height: 50vh;
  overflow-y: scroll;
}

.bus-table thead, tbody tr {
  display: table;
  width: 100%;
  table-layout: fixed;
}

.bus-table thead th{
  width: 100%;
}

.scroll-here {
  border-top: 1px solid @success;
}

.tabs__bar .tabs__wrapper {
  overflow: hidden;
}

.fade-enter-active, .fade-leave-active {
  transition: .4s all ease-out;
  transform-origin: 50% 100%;
  transform: translate3d(0, 0, 0);
}

.fade-enter, .fade-leave-to {
  opacity: 0;
  transform: translateY(30px);
}

.progress-linear__bar__determinate.primary {
	animation: bg-pan-right 6s linear infinite alternate both;
	background: linear-gradient(270deg, #cc6aa5, #3e91cc, #2dcca7);
  background-size: 600% 100%;
}

@keyframes bg-pan-right {
  0% {
    background-position: 0% 50%;
  }
  100% {
    background-position: 100% 50%;
  }
}

@media only screen and (max-width: 768px) {
  .search-expand {
    position: absolute;
    z-index: 999;
    top: 3px;
    left: 0;
    width: 75%;
    transition: .4s all;
  }

  .hide-search--mobile {
    display: none
  }

  .search-icon--mobile {
    display: block;
  }
}
